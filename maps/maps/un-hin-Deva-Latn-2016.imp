    sub "ठ्", "ṭh"
    sub "ड्", "ḍ"
    sub "ढ्", "ḍh"
    sub "ण्", "ṇ"

    # Dentals
    sub "त्", "t"
    sub "थ्", "th"
    sub "द्", "d"
    sub "ध्", "dh"
    sub "न्", "n"

    # Labials
    sub "प्", "p"
    sub "फ्", "ph"
    sub "ब्", "b"
