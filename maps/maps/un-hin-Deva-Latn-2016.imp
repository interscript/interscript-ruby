    sub "म्", "m"

    # Semivowels
    sub "य्", "y"
    sub "र्", "r"
    sub "ल्", "l"
    sub "व्", "v"

    # Sibilants
    sub "श्", "sh"
    sub "ष्", "ṣh"
    sub "स्", "s"

    # Dotted variants
    sub "क़्", "q"
    sub "ख़्", "ḳh"
    sub "ग़्", "ġ"
    sub "ज़्", "z"
    sub "ड़्", "ṙ"
    sub "ढ़्", "ṙh"
    sub "फ़्", "f"
