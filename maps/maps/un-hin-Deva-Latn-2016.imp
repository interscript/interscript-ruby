    sub "थ", "tha"
    sub "द", "da"
    sub "ध", "dha"
    sub "न", "na"

    # Labials
    sub "प", "pa"
    sub "फ", "pha"
    sub "ब", "ba"
    sub "भ", "bha"
    sub "म", "ma"

    # Semivowels
    sub "य", "ya"
    sub "र", "ra"
    sub "ल", "la"
    sub "व", "va"

    # Sibilants
    sub "श", "sha"
    sub "ष", "ṣha"
    sub "स", "sa"

    # Dotted variants
    sub "क़", "qa"
    sub "ख़", "ḳha"
    sub "ग़", "ġa"
    sub "ज़", "za"
    sub "ड़", "ṙa"
    sub "ढ़", "ṙha"
    sub "फ़", "fa"


    # Aspirate
    sub "ह", "ha"

    # Anusvāra
    sub "ं", "ṁ"

    # Anunāsika
    sub "ँ", "m̐"

    # halanta
    sub "्", ""

    # bisharga
    sub "ः", "ḥ"

    #V. Ligatures(To cover all Ligatures at unicode)
    #  Implemnting Pronunciation without a vowel: क् k.

    # Gutturals
    sub "क्", "k"
    sub "ख्", "kh"
    sub "ग्", "g"
    sub "घ्", "gh"
    sub "ङ्", "ṅ"

    # Palatals
    sub "च्", "ch"
