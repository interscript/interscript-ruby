    sub "म", "ma"

    # Semivowels
    sub "य", "ya"
    sub "र", "ra"
    sub "ल", "la"
    sub "ळ", "ḷa"
    sub "व", "va"

    # Sibilants
    sub "श", "śa"
    sub "ष", "ṣa"
    sub "स", "sa"

    # Aspirate
    sub "ह", "ha"

    # Anusvāra
    sub "ं", "ṃ"

    # Bisarga
    sub "ः", "ḥ"

    # Anunāsika
    sub "ँ", "ṁ"

    # Abagraha
    sub "ऽ", "’" # (apostrophe)

    # Medials # Needed for connecting constants
    sub "ा", "ā"
    sub "ि", "i"
    sub "ी", "ī"
    sub "ु", "u"
    sub "ू", "ū"
    sub "ृ", "ṛ"
    sub "ॄ", "ṝ"
    sub "◌", "ṝ"
    sub "ॢ", "ḷ"
    sub "ॣ", "ḹ"
    sub "े", "e"
    sub "ै", "ai"
    sub "ो", "o"
    sub "ौ", "au"
    sub "ॉ", "ô"
    sub "ॅ", "ê"
    sub "‍", "" # Used for joining



    # For consonant Virāma
    # Gutturals
    sub "क्", "k"
    sub "ख्", "kh"
    sub "ग्", "g"
    sub "घ्", "gh"
    sub "ङ्", "ṅ"

    # Palatals
    sub "च्", "c"
    sub "छ्", "ch"
