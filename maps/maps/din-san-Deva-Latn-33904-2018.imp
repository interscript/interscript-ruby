    sub "त्", "t"
    sub "थ्", "th"
    sub "द्", "d"
    sub "ध्", "dh"
    sub "न्", "n"

    # Labials
    sub "प्", "p"
    sub "फ्", "ph"
    sub "ब्", "b"
    sub "भ्", "bh"
    sub "म्", "m"

    # Semivowels
    sub "य्", "y"
    sub "र्", "r"
    sub "ल्", "l"
    sub "ळ्", "ḷ"
    sub "व्", "v"

    # Sibilants
    sub "श्", "ś"
    sub "ष्", "ṣ"
    sub "स्", "s"

    # Aspirate
    sub "ह्", "h"

    # digits

    sub "०", "0"
    sub "१", "1"
    sub "२", "2"
    sub "३", "3"
    sub "४", "4"
    sub "५", "5"
    sub "६", "6"
    sub "७", "7"
    sub "८", "8"
    sub "९", "9"
  }

  compose
